<Window x:Class="Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Randomizer" Height="356" Width="322.888" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Число возможных исходов:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="EventsCount_TextBox" HorizontalAlignment="Left" Height="23" Margin="177,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="2"/>
        <TextBox x:Name="TestsCount_TextBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="177,41,0,0" Text="100"/>
        <Label Content="Число испытаний:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,36,0,0"/>
        <Button x:Name="Randomize_Button" Content="Randomize!" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="287" Click="Randomize_Button_Click"/>
        <TextBox x:Name="Results_TextBox" HorizontalAlignment="Left" Height="217" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" Margin="10,94,0,0" IsReadOnly="True" VerticalScrollBarVisibility="Auto" FontFamily="Consolas"/>

    </Grid>
</Window>
